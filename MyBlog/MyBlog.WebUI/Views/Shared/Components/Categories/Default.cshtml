@model List<Category>

<div class="list-group">
    <a href="/Home/Index" title="Tüm Kategoriler" class="list-group-item list-group-item-action">Tüm Kategoriler</a>
    @foreach (var category in Model)
    {
        <a href="/Home/SelectCategory/@category.Id" title="@category.Description" class="list-group-item list-group-item-action "> @category.Name</a>
    }
</div>